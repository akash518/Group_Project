<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GroupProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary button, toolbar -->
        <item name="colorPrimary">#7c87ff</item>
        <item name="colorPrimaryVariant">#5c6bdc</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#d32f2f</item>
        <item name="colorSecondaryVariant">#9a0007</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background areas (entire screen, scroll views) -->
        <item name="colorOnBackground">#000000</item>

        <!-- Surfaces like cards, dialogs -->
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>

        <!-- System UI elements -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
    </style>

    <style name="Theme.GroupProject" parent="Base.Theme.GroupProject" />

    <style name="SquareButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/square_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle" parent="Theme.GroupProject" >
        <item name="android:textColor">@color/black</item>
    </style>

</resources>